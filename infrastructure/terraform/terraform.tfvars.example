# Ejemplo de archivo de variables para Terraform
# Copiar a terraform.tfvars y editar con tus valores

environment        = "sandbox"
grobid_deployment  = "ec2"  # o "fargate"
aws_region        = "us-east-1"
project_name      = "bibliografia"
crossref_email    = "tu-email@example.com"

# Opcional: Usar VPC existente
